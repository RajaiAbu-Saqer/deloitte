<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TabLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/dashboard_content_background</item>
        <item name="tabMode">fixed</item>
        <item name="tabTextColor">@color/grey</item>
        <item name="tabSelectedTextColor">@color/purple_200</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabIndicator">@drawable/custom_tab_indicator</item>
        <item name="tabTextAppearance">@style/TabLayoutTextStyle</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="SupportMerchantsTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabMode">scrollable</item>
        <item name="tabTextColor">@color/grey</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorHeight">2dp</item>
        <!--        <item name="tabIndicatorColor">@color/mainColor</item>-->
        <item name="tabIndicator">@drawable/custom_tab_indicator</item>
    </style>
</resources>