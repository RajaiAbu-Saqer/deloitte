<resources>
    <!-- Base application theme. -->
    <style name="Theme.Deloitte" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
        <item name="android:textViewStyle">@style/RootTextViewStyle</item>
        <item name="android:buttonStyle">@style/RootButtonStyle</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="RootTextViewStyle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/grey</item>
        <item name="autoSizeTextType">uniform</item>
    </style>


    <style name="RootButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:backgroundTint">@color/main_selector</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@color/main_text_selector</item>
        <item name="strokeColor">@color/light_grey</item>
        <item name="iconPadding">0dp</item>
    </style>
</resources>